* {
	margin: 0 auto;
	padding: 0;
	list-style: none;
}

a {
	text-decoration: none;
}

html,
body {
	width: 100%;
	height: 100%;
}

.content {
	width: 100%;
	display: flex;
	flex-direction: column;
	text-align: center;
	overflow: hidden;

}

.person{
	width: 100%;
	background-color: #f1f1f1;
	background-image: url('../img/2.png');
	background-repeat: no-repeat;
	background-size: 100%;
}

.headImg {
	width: 0.53rem;
	height: 0.53rem;
	display: block;
	margin-top: 0.83rem;
	border-radius: 5px;
}

span.name {
	font-size: 0.12rem;
	font-family: "微软雅黑";
	color: #504D53;
	font-weight: 600;
	display: block;
	margin-top: 0.05rem;
}

p {
	font-size: 0.14rem;
	font-weight: 600;
	color: #504D53;
	margin-bottom: 0.06rem;
}

p.congratulation{
	font-size: 0.1rem;
	color: #9F9F9F;
	margin: 0.05rem 0 0.06rem;
}

p a {
	font-size: 0.12rem;
	font-family: "微软雅黑";
	color: #EB6643;
	margin: 0 0.25rem;
}

.record {
	flex: 1;
}

.record span.title {
	float: left;
	font-size: 0.1rem;
	color: #BBBBBB;
	margin: 0.2rem 0 0.15rem 0.15rem;
}

.record ul {
	padding: 0 0.15rem;
}

.record ul li {
	float: left;
	width: 100%;
	font-size: 0.2rem;
	margin-bottom: 0.1rem;
}

.record ul li span.span1 {
	float: left;
	font-size: 0.12rem;
	color: #333333;
}

.record ul li span.span2 {
	float: right;
	font-size: 0.12rem;
	color: #777777;
}

.record ul li span.advertise {
	float: left;
	text-align: left;
	font-size: 0.12rem;
	width: 2.6rem;
	color: #F74342;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}

.qrcode {
	position: fixed;
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, 0.5);
	z-index: 1000;
	display: none;
}

.pic {
	width: 200px;
	position: absolute;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
	margin: auto;
	z-index: 5000;
}

.hand {
	float: right;
	width: 0.3rem;
	margin: 0.1rem 0.05rem 0 0;
	animation: change 1s infinite;
}

@keyframes change {
	0% {
		transform: translate(0px, 0px);
	}
	50% {
		transform: translate(0px, -10px);
	}
	100% {
		transform: translate(0px, 0px);
	}
}