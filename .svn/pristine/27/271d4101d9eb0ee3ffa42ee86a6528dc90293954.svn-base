@charset "utf-8";
html{
	font-size: 62.5%;
	width: 100%;
	height: 100%;
}
a {
	text-decoration: none;
}

a:focus {
	text-decoration: none;
}
a:link,a:visited{color:#656565;text-decoration:none;}
a:active, a:hover {
	text-decoration: none;
}
a.alink:link{
	color: #fff;
}

body {
	margin: 0;
	padding: 0;
	font-family: "微软雅黑";
	font-weight: 400;
	-webkit-font-smoothing: antialiased;
	-webkit-text-size-adjust: 100%;
	width: 100%;
	height: 100%;
}
.bg404{
	position: relative;
}
.bg404-img{
	position: absolute;
	top: 50%;
	left: 50%;
	margin-top:-350px;
	margin-left:-500px;
}
.bg404-back{
	position: absolute;
	width: 1000px;
	height: 700px;
	box-sizing: border-box;
	padding: 350px 316px 0 560px;
	top: 50%;
	left: 50%;
	margin-top:-350px;
	margin-left:-500px;
	text-align: center;
}
.bg404-back a{
	display: block;
}