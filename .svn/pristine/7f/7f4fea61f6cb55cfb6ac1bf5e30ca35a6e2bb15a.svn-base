body{
	background-color: #FFF;
}
.gd-header{
	position: fixed;
	top: 0px;
	height: 4.2rem;
	width: 100%;
	background: #595959;
	box-shadow: 2px 2px 6px #ccc;
	border-bottom: 1px solid #eee;
	z-index: 3;
}
#gd-head{
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	color: #FFF;
	padding: 0rem 0.3rem;
}
.gd-head-center{
	height: 100%;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: stretch;
	font-size: 1.5rem;
	align-items: center;
}
.gd-head-right{
	font-size: 2rem;
	color: #17E574;
	cursor: pointer;
	font-family: cursive;
}

#content{
	width: 96%;
	margin: 4.2rem auto;
}
#content textarea{
	min-height: 10rem;
	padding: 1rem 0.5rem 0.5rem;
	border: 0px solid transparent;
}
.div-photo{
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	flex-wrap: wrap;
	padding-bottom: 0.3rem;
	border-bottom: 1px solid #b9b9ae;
}
.photo div{
	top: 0.1rem;
	right: 0.1rem;
	background: #777;
	opacity: 0.8;
	cursor: pointer;
	position: absolute;
	z-index: 2;
}
.photo div i{
	color: #FFF;
	font-size: 1.8rem;
}
.pdiv{
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
	width: 31.33%;
	background-color: #F0F;
	/*display: flex;*/
}
/*发照片按钮*/
.addphoto{
	background: #F2F2F2;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	font-size: 1.4rem;
	color: #b9b9ae;
	cursor: pointer;
}
.addphoto img{
	width: 30%;
}