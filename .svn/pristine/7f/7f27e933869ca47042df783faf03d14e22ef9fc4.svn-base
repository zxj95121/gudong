{include file='Default/common/header'}
        <style>
            .modal-body span{
                width: 25%;
                display: block;
                float: left;
            }
            .modal-body font{
                width: 75%;
                display: block;
                float: left;
            }
        </style>
<div class="page-content">
    <div class="container-fluid">
        {include file='Default/common/path_link'}
        <div id="dashboard">
            <a href="{:url('admin/Label/operation_info')}" class="btn green"><i class="icon-plus"></i>添加信息</a>
            <div class="row-fluid" style="margin-top: 10px;">
                <div class="span12">
                    <div class="portlet box light-grey">
                        <div class="portlet-title">
                            <div class="caption"><i class="icon-globe"></i>标签配置列表</div>
                            <div class="tools">
                                <a href="javascript:void(0);" class="collapse"></a>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="clearfix">
                                <div class="btn-group">
                                </div>
                                <form action="{:url('admin/Label/index')}" id='searchForm' method='get'>

                                    <!--<button type="submit" style="margin-bottom:26px" class="btn green"><i class="icon-search"></i>搜索</button>-->
                                </form>
                            </div>
                            <table class="table table-striped table-bordered table-hover" id="sample_1">
                                {include file='Default/common/table/table_thead'}
                                <tbody>
                                {foreach $list as $key=>$info}
                                <tr class="odd gradeX">
                                    <td>{$key}</td>
                                    <td>{$info['label']}</td>
                                    <td><span>{:date('Y-m-d H:i:s',$info['add_ts'])}</span></td>
                                    <td><span>{$info['status']|showstatus=###,'正常,异常:1,2'}</span></td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn green" href="#" data-toggle="dropdown">
                                                操作<i class="icon-angle-down"></i>
                                            </a>
                                            <ul class="dropdown-menu" style="text-align: left">
                                                <li><a href="{:url('admin/Label/operation_info',['label_id'=>$info['label_id']])}">修改</a></li>
                                                </a></li>
                                                <li><a href="{:url('admin/Label/update_status',['label_id'=>$info['label_id']])}">
                                                    {if $info['status']==1}禁用{else/}解除{/if}</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                                {/foreach}
                                </tbody>
                            </table>
                            <div class="" style="width:30%;margin: 0 auto">
                                {include file='Default/common/page'}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{include file='Default/common/footer'}
<script>
    $('.chosen[name="user_no"]').change(function () {
        return $('#searchForm').submit();
    })

</script>