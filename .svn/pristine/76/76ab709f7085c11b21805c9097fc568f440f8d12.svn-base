     * @param string $order
     * @return array
     */
    public function getCommentInfo($condition=[],$order=''){

        $this->alias('comment')
            ->field('comment.*,user.user_name,user.header_img');
        $join = [
            ['user user', 'user.user_id=comment.user_id', 'LEFT'],
        ];
        if($condition){
            $this->where($condition);
        }

        if($order){
            $this->order($order);
        }

        return $this->join($join)->select();

    }

