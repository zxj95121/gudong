@charset "utf-8";
/* CSS Document */

* {
	margin: 0;
	padding: 0;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	-o-box-sizing: border-box;
	-ms-box-sizing: border-box;
	box-sizing: border-box;
	-webkit-tap-highlight-color: transparent;
	font-family: "PingFang SC", PingFangSC, Helvetica, sans-serif!important;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    -webkit-tap-highlight-color:transparent;
    outline:none；
}
/* @font-face {font-family:"myFont fan";src: url('./NotoSansHans-DemiLight.ttf'); */
/*}*/
body, div, span, i, em, h2, h3, h4, h5, h6, h1, b, big, small, ul, li, a, img {
  margin: 0;
  padding: 0;
  border:none;
  /*font-weight:lighter;*/
  font-size:1rem;
  font-weight:400;
  color:#323232;
	-webkit-tap-highlight-color: transparent;
	font-family: "PingFang SC", PingFangSC, Helvetica, sans-serif!important;
}
input,button,textarea,text{
	font-family: "PingFang SC", PingFangSC, Helvetica, sans-serif!important;
}
li{
  list-style:none;
  }
a{
  text-decoration:none;
  }
.clear-fix:after{
	content:' ';
	width:0;
	height:0;
	clear:both;
	display:block;
}
em,i{
	font-style:normal;
}
/************************************/
.con-top{
		width: 100%;
		height: 7rem;
		background: white;
		margin: 1rem 0;
	}
.con-top .fa{
	width: 2rem;
    height: 2rem;
    margin-top: 3rem;
	background:url(../images/timg18-1.png) no-repeat;
}
	.con-body{
		width: 100%;
		background: white;
	}
	.item{
		width: 100%;;
		height: 3.2rem;
		border-bottom: 1px solid #eee;
		line-height: 3.2rem;
	}
	.item .fa-angle-right{
		width: 2rem;
    	height: 2rem;
    	margin-top:1rem;
   		background:url(../images/timg18-1.png) no-repeat;
	}
	.item:last-child{
		border-bottom:none
	}
	.header{
		width: 4rem;
		height: 4rem;
		border-radius: 50%;
		float: left;
		margin: 1.5rem 2.5rem;
		
	}
	.info{
		float:left;
	}
	.info p{
		font-size: 1.1rem;
		margin: 0;
		padding: 0;
	}
	.item img{
		float: left;
		margin-left: 2.5rem;
		width: 1.5rem;
		height: 1.5rem;
		margin-top: 0.85rem;
	}
.footer{
    position: fixed;
    bottom: 0;
    background: white;
    left: 0;
    width:100%;
    height: 3.5rem;
    border-top: 1px solid #ccc;
}

.footerItem{
    width: 25%;
    float: left;
    height: 100%;
    line-height: 3.5rem;
    text-align: center;
}
.footerItem img{
    width: 1.9rem;
    height: 1.9rem;
    margin-top: 0.8rem;
}
.dengpao img{
    width: 2.1rem;
    height: 2.1rem;
    margin-top: 0.8rem;
}
.emo img{
    width: 2rem;
    height: 2rem;
    margin-top: 0.8rem;
}