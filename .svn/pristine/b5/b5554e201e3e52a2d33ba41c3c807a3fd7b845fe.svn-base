body{
	background-color: #FFF;
}
.gd-header{
	position: fixed;
	top: 0px;
	height: 4.2rem;
	width: 100%;
	background: white;
	z-index: 3;
    box-shadow: 2px 2px 6px #ccc;
    border-bottom: 1px solid #eee;
}

.gd-head-center{
	width: 100%;
	height: 100%;
	margin: 0 auto;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: stretch;
	font-size: 1.4rem;
}

.gd-header-nav{
	display: flex;
	align-items: stretch;
	justify-content: center;
	padding: 0px 0.4rem;
	color: #666;
	cursor: pointer;
}

.gd-header-nav-active{
	border-bottom: 2px solid #61B411;
	color: black;
}

.gd-head-title{
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	color: black;
}



/*content部分*/
.gd-content{
	margin-top: 4.2rem;
	width: 100%;
	margin-bottom: 4.2rem;
	/*height: calc(100% - 8.4rem);
	height: -webkit-calc(100% - 8.4rem);*/
	/*max-height: -webkit-calc(100% - 100px);*/
}
.gd-con{
	background-color: #F0EDED;
	width: 100%;
	height: 100%;
	overflow-y: scroll;
}

