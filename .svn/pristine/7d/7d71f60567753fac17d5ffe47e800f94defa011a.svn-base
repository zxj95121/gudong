/*content部分*/
.comment{
	width: 100%;
}
.gd-content{
	margin-top: 0rem;
/*	height: calc(100% - 4.2rem);
	height: -webkit-calc(100% - 4.2rem);*/
}
.gd-header-nav{
	color: #FFF;
}
.gd-header{
	position: relative;
}
.i_prev_url{
	position: absolute;
	font-size: 1.6rem;
	top: 1.3rem;
	left: 1rem;
	color: #FFF;
}
.moment-image{
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	flex-wrap: wrap;
}
.moment-image-div{
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
}
.moment-image-div:nth-child(n+1):nth-last-child(-n+9){
	width: 31.33%;
	display: flex;
}
.moment-image-div:nth-child(1):nth-last-child(1){
	width: 100%;
}
.moment-image-div:nth-child(1):nth-last-child(2),
.moment-image-div:nth-child(2):nth-last-child(1) {
	width: 48%;
}